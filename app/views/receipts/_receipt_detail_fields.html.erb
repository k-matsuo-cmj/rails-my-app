<div class="nested-fields ">
<div class="row mb-3">
  <div class="col">
    <%= f.text_field :name, class: "form-control", placeholder: :name %>
  </div>
  <div class="col">
    <%= f.number_field :price, class: "form-control text-end", placeholder: :price %>
  </div>
  <div class="col">
    <%= f.number_field :quantity, class: "form-control text-end", placeholder: :quantity %>
  </div>
  <div class="col">
    <%= link_to_remove_association "<i class='bi bi-x'></i> 削除".html_safe, f, class: 'btn btn-sm btn-danger' %>
  </div>
</div>
</div>