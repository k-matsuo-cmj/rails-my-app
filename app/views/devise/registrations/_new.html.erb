<div class="modal fade" id="signUpModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><h1>Sign Up</h1></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal">
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "30", class: "form-control" %>
            </div>
            <div class="field">
              <%= f.label :password, class: "form-label" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", size: "30", class: "form-control" %>
            </div>
            <div class="field">
              <%= f.label :password_confirmation, class: "form-label" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", size: "30", class: "form-control" %>
            </div>
            <br>
            <div class="actions">
              <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>